body
    font-size 14px

h1, h2, h3, h4, h5, h6, p, a, span, li
    font-family 'Montserrat', sans-serif
    color $charade

p, li
    font-size 1em
    font-weight 300
    line-height 1.6em

h1, h2, h3, h4
  margin 0
  font-weight inherit
  line-height 1.2

h1
    font-size $font-size-1

h2
    font-size $font-size-2

h3
    font-size $font-size-3

h4
    font-size $font-size-4

h6
    font-family $base_font_family
    font-weight normal
    font-size $base_font_size