pre
    position relative
    margin 0
    white-space pre
    word-wrap normal
    &:before
        position absolute
        top 16px
        right 0
        padding-right .5em
        opacity 1
        color black
        line-height 1.5
        cursor default
        font-size 1em
    
    code 
        overflow-x scroll
        display block
        padding 0 1em
        background #f5f5f5
        background-image linear-gradient(darken(#f5f5f5, 2%) 50%, transparent 50%)
        background-size 100% 3em
        background-position 0 1.5em
        background-origin content-box
        line-height 1.5
        font-size 1em

.css:before
    content "CSS"

.html:before
    content "HTML"

.javascript:before
    content "JavaScript"

.scss:before
    content "SCSS"
